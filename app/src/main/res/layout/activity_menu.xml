<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@drawable/activity_background"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escuela de Aventuras"
            android:id="@+id/escuelaDeAventurasTitle"
            android:layout_gravity="center_horizontal"
            android:textColor="#0f02ad"
            android:textStyle="bold"
            android:textSize="30dp"
            android:elegantTextHeight="false"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextPlayerName"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="50dp"
                android:background="#5aaa18ed"
                android:hint="Ingresa tu nombre"
                android:gravity="center_horizontal"
                android:layout_weight="0.03" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextPlayerAge"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#5aaa18ed"
                android:hint="Ingresa tu edad"
                android:gravity="center_horizontal"
                android:layout_weight="0.03" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comenzar"
                android:width="150dp"
                android:height="40dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/button_comenzar"
                android:onClick="onClickButtonStart"
                android:background="@drawable/button_background_1"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salir"
                android:width="150dp"
                android:height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/button_salir"
                android:onClick="onExitClick"
                android:background="@drawable/button_background_2"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

